{
  "manifest_version": 3,
  "name": "Only Following Tweets",
  "version": "0.0.1",
  "description": "Make your timeline only show tweets from the people you follow.",
  "icons": {
    "128": "./assets/logo_128.png"
  },
  "action": {
    "default_title": "Configure Options",
    "default_popup": "popup.html"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*"],
      "js": ["content.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ]
}
